#!/usr/bin/env bash
source /dev/stdin < <(cli loader)
source /dev/stdin < <(cli initialize)
source /dev/stdin < <(cli export)

help() {
    cat << EOF
Command
    integrate volume .group

Summary
    Commands for finding areas of shapes.

Global Arguments
    --help -h        [Flag] : Show this message and exit.
    --self-test      [Flag] : Runs a self test.
EOF
}

main() {
    integrate::volume::cube() {
        math::multiply $1 $1 $1
    }

    cli::export::source integrate .group
    cli::export integrate volume
}

self_test() {
    source /dev/stdin < <(cli_assert)
}

cli::load "$@"